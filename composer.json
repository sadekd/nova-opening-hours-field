{
    "name": "sadekd/nova-opening-hours-field",
    "description": "Laravel Nova custom field for Spatie Opening Hours",
    "keywords": [
        "laravel",
        "nova",
        "opening hours"
    ],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "laravel/nova": "^5.0",
        "spatie/opening-hours": "^2.0|^3.0"
    },
    "require-dev": {
        "laravel/nova-devtool": "^1.1.2"
    },
    "autoload": {
        "psr-4": {
            "SadekD\\NovaOpeningHoursField\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "SadekD\\NovaOpeningHoursField\\FieldServiceProvider"
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "scripts": {
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    }
}
